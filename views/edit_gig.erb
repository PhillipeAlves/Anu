<form class="form-styling" action="/gigs/<%= gig["id"] %>" method="post">
     <input type="hidden" name="_method" value="patch">
    <h3 class="green"><%= gig["title"]%></h3>
    <label for="">Title</label>
    <input name="title" type="text" placeholder="<%= gig["title"]%>" autocomplete="off">
    <label for="">Date</label>
    <input class="calendar" type="date" name="calendar" value="<%= gig["date"]%>" min="2020-01-01" max="2021-12-31">
    <label for="">Position</label>
    <select class="add-type" name="position">
            <option value="FOH" selected>Front of House</option>
            <option value="BOH">Back of House</option>
    </select>
    <label for="">Description</label>
    <textarea name="description" id="" cols="30" rows="10" placeholder="Describe here your gig..."><%= gig["description"] %></textarea> 
    <button class="marble">Post</button>
</form>

