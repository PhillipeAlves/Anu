<form class="form-styling" action="/gigs" method="post">
    <h3 class="green">Post a new gig</h3>
    <label for="">Title</label>
    <input name="title" type="text" placeholder="Title" autocomplete="off">
    <label for="">Date</label>
    <input class="calendar" type="date" name="calendar" value="YYYY-MM-DD" min="2020-01-01" max="2021-12-31">
    <label for="">Position</label>
    <select class="add-type" name="position">
            <option value="FOH" selected>Front of House</option>
            <option value="BOH">Back of House</option>
    </select>
    <label for="">Description</label>
    <textarea name="description" id="" cols="30" rows="10" placeholder="Describe here your gig..."></textarea> 
    <button class="marble">Post</button>
</form>

